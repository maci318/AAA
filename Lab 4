#include <iostream>
using namespace std;

int main()
{
{
    int cantidad, opcion;
    flota precio, tp, suma = 0;
    cout << "menu" << endl;
    cout << "1. hamburguesa" << endl;
    cout << "2. hamburguesa con papas" << endl;
    cout << "3. papas fritas" << endl;
    cout << "4. soda" << endl;
    cout << "0. salir" << endl;
    cout << "ingrese su opcion: " << endl;
    cin >> opcion;
    switch (opcion)
        case 1:precio = 3;
        break;
        case 2:precio = 5;
        break;
        case 3:precio = 2;
        break;
        case 4:precio = 2.5;
        break;
        case 0: 
        cout << "saliendo";
        default:
            cout << "error";
} 
     if(precio>0) {
         cout << "ingrese la cantidad"
             cin >> cantidad;
         tp = precio * cantidad;
         suma = suma * cantidad;
         }
     }while (opcion != 0) :
         cout <<"ele tota es" << suma << endl;
 }

